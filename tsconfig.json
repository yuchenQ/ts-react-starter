{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "noEmit": true,
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./build",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "build", "public"]
}
